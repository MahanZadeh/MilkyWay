<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/choose_a_country"
        android:textSize="30sp"
        android:layout_marginTop="60dp"
        android:textColor="@color/purple_500"
        />

    <Spinner
        android:id="@+id/nationality_spinner"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"/>

    <TextView
        android:id="@+id/textViewInterests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_your_interests"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        />


    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/beer"
        android:gravity="start"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jeans"
        android:gravity="start"
        android:layout_marginStart="100dp"
        />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cappuccino"
        android:gravity="start"
        android:layout_marginStart="100dp"
        />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/one_bedroom_apartment_in_city_centre"
        android:gravity="start"
        android:layout_marginStart="100dp"
        />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/water_0_33_liter_bottle"
        android:gravity="start"
        android:layout_marginStart="100dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/search"
            android:textSize="25sp"
        />
    </LinearLayout>


</LinearLayout>